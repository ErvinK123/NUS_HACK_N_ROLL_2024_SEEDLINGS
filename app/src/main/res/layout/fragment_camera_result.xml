<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/localRecogniseButton"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/round_corner_button"
        android:backgroundTint="@android:color/black"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/camera_result"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_marginStart="162dp"
        android:layout_marginEnd="192dp"
        android:background="@drawable/round_corner_button"
        android:backgroundTint="@color/header"
        android:gravity="center"
        android:text="Photo captured"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <ImageView
        android:id="@+id/testImage"
        android:layout_width="375dp"
        android:layout_height="318dp"
        app:layout_constraintBottom_toTopOf="@+id/localRecogniseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_result"
        app:layout_constraintVertical_bias="0.394"
        app:srcCompat="@drawable/ic_launcher_foreground" />
</androidx.constraintlayout.widget.ConstraintLayout>